<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/space_x1"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_gradient_3"
            android:padding="@dimen/space_x2"
            android:text="@string/course"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_drop_down"
            app:drawableTint="@android:color/white" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_x2">

            <TextView
                android:id="@+id/course_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_x1"
                android:text="@string/course_code"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_x1"
                android:text="@string/course_class"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_x1"
                android:layout_marginEnd="@dimen/space_x4"
                android:text="@string/com"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_x1"
                android:text="@string/course_code"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/course_code"
                app:layout_constraintEnd_toEndOf="@id/course_code"
                app:layout_constraintTop_toBottomOf="@id/course_code" />

            <TextView
                android:id="@+id/course_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_x1"
                android:text="@string/course_class"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/course_code" />

            <TextView
                android:id="@+id/course_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_x1"
                android:text="@string/com"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/com"
                app:layout_constraintEnd_toEndOf="@id/com"
                app:layout_constraintTop_toBottomOf="@id/course_code" />

            <TextView
                android:id="@+id/absence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_x1"
                android:text="@string/total_session"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/course_code"
                app:layout_constraintEnd_toEndOf="@id/course_code"
                app:layout_constraintTop_toBottomOf="@id/code" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_x1"
                android:text="@string/max_absence"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/code" />

            <TextView
                android:id="@+id/total_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_x1"
                android:text="@string/total_session"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/course_code"
                app:layout_constraintEnd_toEndOf="@id/course_code"
                app:layout_constraintTop_toBottomOf="@id/absence" />

            <TextView
                android:id="@+id/max_absence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_x1"
                android:text="@string/max_absence"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/absence" />

            <TextView
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_x1"
                android:text="@string/session_done"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/course_code"
                app:layout_constraintEnd_toEndOf="@id/course_code"
                app:layout_constraintTop_toBottomOf="@id/total_session" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_x1"
                android:text="@string/total_absence"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_session" />

            <TextView
                android:id="@+id/session_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_x1"
                android:text="@string/session_done"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/course_code"
                app:layout_constraintEnd_toEndOf="@id/course_code"
                app:layout_constraintTop_toBottomOf="@id/done" />

            <TextView
                android:id="@+id/total_absence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_x1"
                android:text="@string/total_absence"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/done" />

            <TextView
                android:id="@+id/attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_x1"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/indicator"
                app:layout_constraintBottom_toBottomOf="@id/indicator"
                app:layout_constraintEnd_toEndOf="@id/indicator"
                app:layout_constraintTop_toTopOf="@id/indicator" />

            <ProgressBar
                android:id="@+id/indicator"
                android:layout_width="96dp"
                android:layout_height="96dp"
                style="?android:progressBarStyleHorizontal"
                android:progress="80"
                android:max="100"
                android:layout_marginTop="@dimen/space_x1"
                android:progressDrawable="@drawable/circle"
                app:layout_constraintStart_toStartOf="@id/com"
                app:layout_constraintEnd_toEndOf="@id/com"
                app:layout_constraintTop_toBottomOf="@id/code" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>